# Flux Backend Environment Configuration

# Development Environment
NODE_ENV=development

# Database Configuration (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/flux_development
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000

# Redis Configuration (Railway Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL_DEFAULT=3600

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Flux Application Settings
FLUX_VERSION=1.0.0
FLUX_ENV=development

# Application Configuration
APP_NAME=flux-backend
APP_VERSION=1.0.0

# Supabase Authentication Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_JWT_SECRET=your_jwt_secret

# JWT Configuration
JWT_SECRET=your_32_character_random_string
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
AI_REQUEST_TIMEOUT=30000

# PhonePe Payment Configuration
PHONEPE_MERCHANT_ID=your_merchant_id
PHONEPE_SALT_KEY=your_salt_key
PHONEPE_SALT_INDEX=your_salt_index
PHONEPE_ENVIRONMENT=sandbox
PHONEPE_CALLBACK_URL=http://localhost:3000/api/v1/payments/phonepe/callback

# Blynk IoT Configuration
BLYNK_AUTH_TOKEN=your_blynk_auth_token
BLYNK_SERVER_URL=https://blynk.cloud
IOT_SYNC_INTERVAL=300000

# Hyperledger Blockchain Configuration
HYPERLEDGER_NETWORK_URL=your_network_url
HYPERLEDGER_CERT_PATH=/app/certs/hyperledger
HYPERLEDGER_CHANNEL_NAME=flux-channel
HYPERLEDGER_CHAINCODE_NAME=flux-expenses

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
OCR_MAX_FILE_SIZE=5242880
OCR_SUPPORTED_FORMATS=image/jpeg,image/png,image/webp

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
CORS_ORIGIN=http://localhost:3000
WEBHOOK_SECRET=your_webhook_secret
ENCRYPTION_KEY=your_32_character_encryption_key

# Monitoring Configuration
LOG_LEVEL=info
METRICS_RETENTION=7
ERROR_ALERT_THRESHOLD=10
PERFORMANCE_ALERT_THRESHOLD=5000

# Compliance Configuration
GDPR_COMPLIANCE=true
DPDP_COMPLIANCE=true
PCI_DSS_MODE=true
AUDIT_LOG_RETENTION=2555
DATA_RETENTION_DAYS=2555

# Railway Deployment Configuration
RAILWAY_ENVIRONMENT=development
RAILWAY_API_URL=http://localhost:3000 